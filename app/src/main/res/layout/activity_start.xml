    <Button
        android:id="@+id/buttonBreakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10sp"
        android:layout_marginTop="230sp"
        android:background="@drawable/btn_bg"
        android:text="@string/breakfast"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:layout_marginTop="300sp"
        android:text="@string/lunch"
        android:layout_marginStart="10sp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/buttonDinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:layout_marginTop="370sp"
        android:text="@string/dinner"
        android:textSize="20sp"
        android:layout_marginStart="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="440sp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popularRecipe"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonMore"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#0F6668"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/seeMore" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStart"
        android:layout_width="match_parent"
        android:layout_marginTop="490sp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonHome"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:background="@color/black"
            app:srcCompat="@drawable/home_button" />

        <ImageButton
            android:id="@+id/buttonFavourite"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:background="@color/black"
            app:srcCompat="@drawable/favourite_button" />

        <ImageButton
            android:id="@+id/buttonProfile"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:background="@color/black"
            app:srcCompat="@drawable/profile_button" />
    </LinearLayout>



</RelativeLayout>